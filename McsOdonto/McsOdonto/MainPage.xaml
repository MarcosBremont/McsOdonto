                                            Grid.Column="1"
                                            x:Name="btnEnCamino"
                                            Text="C I T A S"
                                            TextColor="White"
                                            HeightRequest="80"
                                            BackgroundColor="#3F79AC"
                                            CornerRadius="8"
                                           >
                    </Button>

                    <Button 
                    Margin="5,5,5,5"
                   
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    x:Name="btnEnProceso"
                                    Text="EN  PROCESO"
                                    TextColor="White"
                                    HeightRequest="80"
                                    BackgroundColor="#D09625"
                                    CornerRadius="8"
                                   >
                    </Button>

                    <Button 
                    Margin="5,5,5,5"
                 
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    x:Name="btnTrabajada"
                                    Text="A J U S T E S"
                                    TextColor="White"
                                    HeightRequest="80"
                                    BackgroundColor="#7cc151"
                                    CornerRadius="8">
                    </Button>
                </Grid>

                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand"  x:Name="LytCerrarSesion">
                    <ImageButton Source="logout" HeightRequest="25" x:Name="BtnLogout" BackgroundColor="Transparent">
                    </ImageButton>
                    <Label 
                        FontSize="16"
                         x:Name="BtnCerrarSesion"
                         Text="Cerrar Sesión"
                  
                         FontAttributes="Bold"
                         TextColor="Gray"
                         BackgroundColor="Transparent">
                    </Label>


                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Image Source="Sistecsoft.png"  WidthRequest="150"  HorizontalOptions="CenterAndExpand" x:Name="SistecsoftImagen"  Grid.Column="0" Grid.Row="0" ></Image>
                    <Image Source="OFICABLELOGO.png"  WidthRequest="150"  HorizontalOptions="CenterAndExpand"  x:Name="OficableImagen" Grid.Column="1" Grid.Row="0" ></Image>

                </StackLayout>

            </StackLayout>
