                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Frame>
                        <StackLayout>
                            
                        <ImageButton
                            
                                           
                                            x:Name="btnPagos"
                                            Source="tarjeta.png"
                                            HeightRequest="30"
                                            BackgroundColor="Transparent"
                                          
                                            CornerRadius="8"
                            >
                            
                        </ImageButton>
                        <Label  Text="P A G O S"
                                            TextColor="Black"
                                            FontAttributes="Bold" HorizontalOptions="CenterAndExpand"></Label>
                            
                           
                        </StackLayout>
                    </Frame>
                    <Button 
